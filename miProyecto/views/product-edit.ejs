	<!-- /Head -->
	<%- include('./partials/head')%>
	<!-- /Head -->

	<body>
		<!-- /Header -->
		<% if (logueado) { %>
		<%- include('./partials/headerLogueado')%>
		<% } else { %>
		<%- include('./partials/header')%>
		<% } %>

		<!-- /Header -->

		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Editar producto</h2>
				</div>

				<div class="formulario">
					<form action="/product/edit" method="POST" enctype="multipart/form-data">

						<h3>Título:</h3><input type="text" class="form-input" name="titulo" value="<%= producto.title %>">
						<h3>Autor: </h3><input type="text" class="form-input" name="autor" value="<%= producto.author %>">
						<h3>Portada:</h3><input type="file" class="form-input" name="portada" id="">
						<h3>Descripción: </h3><input type="text" class="form-input" name="descripcion"
							value="<%= producto.description %>">

						<input type="hidden" name="id" value="<%= producto.id %>">

						<h3><input type="submit" class="boton"> Editar producto</input></h3>
					</form>
				</div>
			</div>
		</div>


		<!-- footer -->
		<%- include('./partials/footer')%>
		<!-- /footer -->
	</body>

	</html>