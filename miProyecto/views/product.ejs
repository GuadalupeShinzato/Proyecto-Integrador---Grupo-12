	<!-- /Head -->
	<%- include('./partials/head')%>
	<!-- /Head -->

	<body>
		<!-- /Header -->
		<% if (logueado) { %>
			<%- include('./partials/headerLogueado')%>
		<% } else { %>
		<%- include('./partials/header')%>
		<% } %> 
		
		<!-- /Header -->

		<!-- product detail -->
		<div class="container products-wrapper">
			<div class="d-flex align-items-center">
				<h2 class="products-title"><%= producto.title %> </h2>
				<p class="product-detail-description">
					<a class="editarProd" href="/product/add">Editar</a>
				</p>
			</div>
			<div class="product-detail">
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= producto.cover %> " alt="" class="product-detail-img">
						<p class="product-detail-description"><%= producto.description %> </p>
					</article>
					<div class="col-12 col-lg-4">
						<section class="comments">
							<% producto.comentarios.forEach(comentario => { %>
								<article>
									<img src="https://via.placeholder.com/35" alt="">
									<div class="data">
										<p class="user">
											<strong> <a class="usuarioNombre" href="profile"><%= comentario.usuario.name %> <%= comentario.usuario.last_name %>: </a> </strong>
											<%= comentario.comment %> </p>
									</div>
								</article>
							<% }) %>

						</section>
						<form class="form" action="" method="GET">
							<input class="form-input" type="text" value="" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
						<hr>
					</div>
				</div>
			</div>
		</div>
		<!-- /product detail -->


		<!-- footer -->
		<%- include('./partials/footer')%>
		<!-- /footer -->
	</body>

	</html>