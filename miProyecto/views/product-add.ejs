	<body>
		<!-- /Header -->
		<% if (logueado) { %>
		<%- include('./partials/headerLogueado')%>
		<% } else { %>
		<%- include('./partials/header')%>
		<% } %>

		<!-- /Header -->

		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Agregar productos</h2>
				</div>

				<div  class="formulario"  >
					<form action="/product/add" method="POST" enctype="multipart/form-data">

						<h3>Título:</h3> <input type="text" class="form-input" name="titulo" value="" required>

						<h3>Autor:</h3> <input type="text" class="form-input" name="autor" value="" required>

						<h3>Portada:</h3> <input type="file" class="form-input" name="portada" id="" required>

						<h3>Descripción:</h3> <input type="text" class="form-input" name="descripcion" value="" required>

						<h2><input type="submit" class="boton"> Agregar producto</input></h2>
					</form>
				</div>
			</div>
		</div>


		<!-- footer -->
		<%- include('./partials/footer')%>
		<!-- /footer -->
	</body>

