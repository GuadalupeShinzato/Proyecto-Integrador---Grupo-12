	<!-- /Head -->
	<%- include('./partials/head')%>
	<!-- /Head -->

	<body>
		<!-- /Header -->
		<% if (logueado) { %>
			<%- include('./partials/headerLogueado')%>
		<% } else { %>
		<%- include('./partials/header')%>
		<% } %> 
		
		<!-- /Header -->


		<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="/images/users/<%= usuario.cover %> " alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"> <%= usuario.name %> <%= usuario.last_name %> 
							<a href="/profile/profileEdit/<%= usuario.id %> ">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<button class="btn mt-3 ml-4" id="seguir">SEGUIR</button>
						<button class="btn mt-3 ml-4" id="siguiendo">SIGUIENDO</button>
					</div>
					<div>
						<ul class="">
							<li><%= usuario.productos.length %>  productos</li>
							<li>3M. seguidores</li>
							<li><%= usuario.comentarios.length %>  comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- /Datos del usuario -->

		<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->

				<% if (usuario.productos.length > 0) { %>
					<% for( let i = 0; i < usuario.productos.length; i++ ) { %>
						<% const producto = usuario.productos[i] %> 
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/id/<%= producto.id %> ">
									<figure class="product-box_image">
										<img src="/images/products/<%= producto.cover %> " alt="<%= producto.title %> ">
									</figure>
									<article class="product-box_data">
										<h2><%= producto.title %></h2>
										<p><%= producto.author %></p>
										<p>Comentarios: <%= producto.comentarios.length %> </p>
									</article>
								</a>
							</section>
						</div>
					<% } %>	
				<% } else { %>
					<h2>Todavía no has publicado ningún producto</h2>
				<% } %>	

			</div>
		</div>
		<!-- /Mis productos -->


		<!-- footer -->
		<%- include('./partials/footer')%>
		<!-- /footer -->
	</body>

	</html>